<%- include("header") -%>
<%- include("search") -%>

<!-- country list -->
<div class="container" id="container">

    <% matchedCountries.forEach(country => { %>
    <form action="/detail" method="post">
        <div class="country item">
            <button type="submit"  class="country__flag" name="detailCountry"
            value="<%= country.cca3 %>" onclick="this.form.submit()">
                <img src="<%= country.flag%>" alt="flag" loading="lazy" class="country__flag__img" >
            </button>
            <div class="country__info">
                <h3 class="country__name"><%= country.name %></h3>
                <p class="country__info__p"><strong>Population: </strong><%= country.population %> </p>
                <p class="country__info__p"><strong>Region: </strong><%= country.region %></p>
                <p class="country__info__p"><strong>Capital: </strong><%= country.capital %> </p>
                <p class="country__info__p"><strong>Independent: </strong><%= country.independent %> </p>
            </div>
        </div>
    </form>
    <% }) %>


</div>


<%- include("footer") -%>